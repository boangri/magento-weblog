 <config> 
      
    <modules>
        <Boangri_Weblog>
            <version>0.1.1</version>
        </Boangri_Weblog>
    </modules>
    
    <global>
        <models>
            <weblog>
                <class>Boangri_Weblog_Model</class>
                <resourceModel>weblog_resource</resourceModel>
            </weblog>
            <weblog_resource>
                <class>Boangri_Weblog_Model_Resource</class>
                <entities>
                    <blogpost>
                        <table>blog_posts</table>
                    </blogpost>
                </entities>
            </weblog_resource>
        </models>
        <resources>
            <weblog_setup>
                <setup>
                    <module>Boangri_Weblog</module>
                    <class>Boangri_Weblog_Model_Resource_Setup</class>
                </setup>
            </weblog_setup>
        </resources>
        <helpers>
            <weblog>
                <class>Boangri_Weblog_Helper</class>
            </weblog>
        </helpers>
        <blocks>
            <weblog>
                <class>Boangri_Weblog_Block</class>
            </weblog>
        </blocks>
    </global>
    
    <frontend>
        <routers>
            <weblog>
                <use>standard</use>
                <args>
                    <module>Boangri_Weblog</module>
                    <frontName>weblog</frontName>
                </args>
            </weblog>
        </routers>  
    </frontend>
    
